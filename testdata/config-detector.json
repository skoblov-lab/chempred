{
  "training_data": {
    "abstracts": "chemdner_corpus/training.abstracts.txt",
    "annotations": "chemdner_corpus/training.annotations.txt"
  },
  "testing_data": {
    "abstracts": "chemdner_corpus/evaluation.abstracts.txt",
    "annotations": "chemdner_corpus/evaluation.annotations.txt"
  },
  "architecture": {
    "nsteps": [200, 200],
    "input_dropout": [0.0, 0.1],
    "recurrent_dropout": [0.0, 0.1],
    "bidirectional": true,
    "stateful": false
  },
  "sampling": {
    "window": 5,
    "maxlen": 500,
    "nonpositive": 3
  },
  "training": {
    "nepochs": 30,
    "batchsize": 400
  },
  "class_mapping": {
    "OTHER": 0,
    "ABBREVIATION": 1,
    "FAMILY": 1,
    "FORMULA": 1,
    "IDENTIFIER": 1,
    "MULTIPLE": 1,
    "NO CLASS": 1,
    "SYSTEMATIC": 1,
    "TRIVIAL": 1
  },
  "positive": ["ABBREVIATION", "FAMILY", "FORMULA", "IDENTIFIER", "MULTIPLE",
               "NO CLASS", "SYSTEMATIC", "TRIVIAL"]
}
