{
  "embed": 50,
  "conv": {
    "filter_width": [5, 5],
    "nfilters": [30, 30]
  },
  "rec": {
    "nsteps": [200, 200],
    "input_dropout": [0.0, 0.1],
    "recurrent_dropout": [0.0, 0.1],
    "bidirectional": true,
    "stateful": false
  },
  "sampling": {
    "window": 5,
    "maxlen": 500,
    "n_nonpositive": 3
  },
  "class_mapping": [
    "OTHER:0",
    "ABBREVIATION:1",
    "FAMILY:1",
    "FORMULA:1",
    "IDENTIFIER:1",
    "MULTIPLE:1",
    "NO CLASS:1",
    "SYSTEMATIC:1",
    "TRIVIAL:1"
  ],
  "positive_cls": ["ABBREVIATION", "FAMILY", "FORMULA", "IDENTIFIER",
                   "MULTIPLE", "NO CLASS", "SYSTEMATIC", "TRIVIAL"]
}
